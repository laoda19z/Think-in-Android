<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3F7"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp">
    <RelativeLayout
        android:id="@+id/publish_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_publish_finish"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ic_arrow_left"/>
        <Button
            android:id="@+id/btn_publish_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#87ceeb"
            android:text="发表"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/edit_publish_trend"
        android:layout_below="@id/publish_top"
        android:layout_width="match_parent"
        android:background="#FFF6FB"
        android:layout_height="200dp"
        android:gravity="top"
        android:hint="分享新鲜事"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/publish_center"
        android:layout_below="@id/edit_publish_trend"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/publish_trend_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/publish_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:alpha="0.7"
        android:layout_below="@id/edit_publish_trend">
        <Button
            android:id="@+id/btn_publish_addImg"
            android:layout_margin="5dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="#DEE0E1"
            android:text="照片"
            android:drawableTop="@mipmap/trend_camera"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/publish_center">
        <Button
            android:id="@+id/btn_publish_location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/water" />
        <TextView
            android:id="@+id/tv_publish_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="23sp"
            android:text="获取当前位置"/>

    </LinearLayout>
</RelativeLayout>