<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5C92D"
    android:orientation="vertical">
    <Button
        android:id="@+id/btn_addRet"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/arrow_left_small"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:src="@drawable/xiaokonglong"/>
    <EditText
        android:id="@+id/et_addKidName"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edit_shape"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:hint="请输入孩子姓名"/>
    <EditText
        android:id="@+id/et_addKidSex"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_shape"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:hint="请输入孩子性别"/>
    <EditText
        android:id="@+id/et_addKidAge"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_shape"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:hint="请输入孩子年龄，7至12的整数"/>
    <EditText
        android:id="@+id/et_addKidGrade"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_shape"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:hint="请输入孩子年级，1至6的整数"/>
    <Button
        android:id="@+id/btn_addKidFinish"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn_shape"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="完成"/>
</LinearLayout>