<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF1F1F1">

    <RelativeLayout
        android:id="@+id/re_seTitle"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#87CEEB">
        <Button
            android:id="@+id/btn_seCenterRet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/arrow_left_big" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_seCenterRet"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="安全中心"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/re_seBody"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/re_seTitle"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_seBody_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/pwd" />
        <TextView
            android:id="@+id/tv_seBody_text"
            android:layout_height="wrap_content"
            android:layout_width="270dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_seBody_img"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="修改密码"/>
        <Button
            android:id="@+id/btn_updatePwd"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/arrow_right_small" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_seBody2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#ffffff"
        android:layout_below="@+id/re_seBody"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tv_seBody2_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/phone"/>
        <TextView
            android:id="@+id/tv_seBody2_text"
            android:layout_height="wrap_content"
            android:layout_width="270dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_seBody2_img"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="更换手机号"/>
        <Button
            android:id="@+id/btn_updatePhone"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/arrow_right_small" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_seBody3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#ffffff"
        android:layout_below="@+id/re_seBody2"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tv_seBody3_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/email"/>
        <TextView
            android:id="@+id/tv_seBody3_text"
            android:layout_height="wrap_content"
            android:layout_width="270dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_seBody3_img"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="邮箱地址"/>
        <Button
            android:id="@+id/btn_updateEmail"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/arrow_right_small" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_seBody4"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#ffffff"
        android:layout_below="@+id/re_seBody3"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tv_seBody4_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/log"/>
        <TextView
            android:id="@+id/tv_seBody4_text"
            android:layout_height="wrap_content"
            android:layout_width="270dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_seBody4_img"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="注册账号"/>
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/arrow_right_small" />
    </RelativeLayout>

</RelativeLayout>