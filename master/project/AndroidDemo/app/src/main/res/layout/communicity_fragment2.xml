<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/all_trend_srl"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.scwang.smartrefresh.header.WaterDropHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <Button
                android:id="@+id/btn_publishtrends"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:background="@mipmap/add1" />
            <Button
                android:id="@+id/btn_myselftrends"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:background="@mipmap/me1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@mipmap/smiles"/>
        </RelativeLayout>

        <ListView
            android:id="@+id/trends_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants" />
    </LinearLayout>


    <com.scwang.smartrefresh.layout.footer.ClassicsFooter
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.scwang.smartrefresh.layout.SmartRefreshLayout>